/*  This is Pandemi's code - v1.0. Pandemi is a UV-C light robot.*/const int leftMotor1 = 2;const int leftMotor2 = 3;const int rightMotor1 = 4;const int rightMotor2 = 5;const int echoPin = 7;const int trigPin = 9;void setup() {  pinMode(leftMotor1, OUTPUT);  pinMode(leftMotor2, OUTPUT);  pinMode(rightMotor1, OUTPUT);  pinMode(rightMotor2, OUTPUT);  pinMode(echoPin, INPUT);  pinMode(trigPin, OUTPUT);}void loop() {  int duration, distance;  // Output pulse with 1ms width on trigPin  digitalWrite(trigPin, HIGH);  delay(1);  digitalWrite(trigPin, LOW);  // Measure the pulse input in echo pin  duration = pulseIn(echoPin, HIGH);  // Distance is half the duration divided by 29.1 (from datasheet)  distance = (duration / 2) / 29.1;  if (distance <= 100 && distance >= 0) {    digitalWrite(leftMotor1, HIGH);    digitalWrite(leftMotor2, LOW);    digitalWrite(rightMotor2, LOW);    digitalWrite(rightMotor1, LOW);      } else {    digitalWrite(leftMotor1, HIGH);    digitalWrite(leftMotor2, LOW);    digitalWrite(rightMotor2, LOW);    digitalWrite(rightMotor1, HIGH);    delay(60);  }}